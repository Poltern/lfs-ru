<sect1 id="ch-system-sysvinit" role="wrap" revision="sysv">
  <?dbhtml filename="sysvinit.html"?>

  <sect1info condition="script">
    <productname>sysvinit</productname>
    <productnumber>&sysvinit-version;</productnumber>
