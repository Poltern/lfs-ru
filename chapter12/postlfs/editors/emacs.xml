    <bridgehead renderas="sect3">Emacs Dependencies</bridgehead>

    <bridgehead renderas="sect4">Recommended</bridgehead>
    <para role="recommended">
      <xref linkend="harfbuzz"/>,
      <xref linkend="giflib"/>,
      <xref linkend="gnutls"/>,
      <xref linkend="jansson"/>, and
      <xref linkend="libtiff"/>
    </para>

